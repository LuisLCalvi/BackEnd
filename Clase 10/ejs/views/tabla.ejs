
<head>

    <body>
        <%- include("/estilos.css") -%>

        
        <div class="jumbotron">
            <% if(productos.length !== 0) { %>


            <h1>Vista de productos</h1>
            <% if(productos.length !== 0) { %>
                <div class="table-responsive">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Precio</th>
                                <th scope="col">Imagen</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% for (const producto in productos ) { %>
                                <tr>
                                <td scope="row"><%= productos[producto].title%></td>
                                <td scope="row"><%= productos[producto].price%></td>
                                <td scope="row">
                                    <img
                                        width="50"
                                        src="<%= productos[producto].thumbnail %>"alt="not found"
                                    />
                                </td>
                            </tr>
                            <% })%>
                        </tbody>


                    </table>
                    <%} else{%>
                        <h3>No hay productos almacenados</h3>
                        <%}%>

                </div>




        </div>
    </body>

</head>